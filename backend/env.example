# ============================================
# VeriSafe Backend 환경 변수 설정
# 이 파일을 .env로 복사하여 사용하세요
# ============================================

# ============================================
# Application
# ============================================
APP_NAME=VeriSafe API
VERSION=1.0.0
DEBUG=True

# ============================================
# Security (프로덕션에서 반드시 변경!)
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=verisafe_user
DATABASE_PASSWORD=your-secure-database-password-here
DATABASE_NAME=verisafe_db

# ============================================
# Redis Cache
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_DB=0
REDIS_CACHE_TTL=300

# ============================================
# CORS Settings
# ============================================
ALLOWED_ORIGINS=http://localhost:8081,http://192.168.45.177:8081

# ============================================
# File Upload
# ============================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# ============================================
# External APIs (선택 사항)
# ============================================
ACLED_API_KEY=
GDACS_API_URL=https://www.gdacs.org/gdacsapi/api/events/geteventlist/SEARCH
RELIEFWEB_API_URL=https://api.reliefweb.int/v1
TWITTER_BEARER_TOKEN=
NEWS_API_KEY=
SENTINEL_CLIENT_ID=
SENTINEL_CLIENT_SECRET=

# ============================================
# Background Tasks
# ============================================
HAZARD_UPDATE_INTERVAL_SECONDS=300
EXTERNAL_DATA_COLLECTION_INTERVAL_HOURS=6
