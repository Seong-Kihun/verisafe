# VeriSafe 환경 변수 템플릿
# 사용법: 이 파일을 .env로 복사하고 실제 값으로 채우세요
# cp .env.example .env
# 또는 STEP3_setup.bat를 실행하면 자동으로 생성됩니다

# Application
APP_NAME=VeriSafe API
DEBUG=true

# Database (PostgreSQL)
# docker-compose.yml과 동일한 비밀번호 사용
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=verisafe_user
DATABASE_PASSWORD=verisafe_pass_2025
DATABASE_NAME=verisafe_db

# Redis
# docker-compose.yml과 동일한 비밀번호 사용
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=verisafe_redis_2025
REDIS_DB=0
REDIS_CACHE_TTL=300

# JWT Authentication
# 개발용 기본값 (프로덕션에서는 반드시 변경)
# 생성 방법: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev_secret_key_change_in_production_2025
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
# 로컬 네트워크 IP 주소는 환경에 맞게 수정
ALLOWED_ORIGINS=http://localhost:8081,http://192.168.104.30:8081

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# External APIs - Phase 1 (선택적)
ACLED_API_KEY=
GDACS_API_URL=https://www.gdacs.org/gdacsapi/api/events/geteventlist/SEARCH
RELIEFWEB_API_URL=https://api.reliefweb.int/v1

# External APIs - Phase 2 (선택적)
# Twitter/X API (https://developer.twitter.com/)
TWITTER_BEARER_TOKEN=

# NewsAPI (https://newsapi.org/)
NEWS_API_KEY=

# Sentinel Hub (https://www.sentinel-hub.com/)
SENTINEL_CLIENT_ID=
SENTINEL_CLIENT_SECRET=
